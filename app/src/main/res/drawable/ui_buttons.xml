<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/colorButtonNormal" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonGradientDark" android:endColor="@color/colorButtonGradientLight"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dip" android:color="@color/colorButtonFocus" />
            <solid android:color="@color/colorButtonNormal"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/colorButtonNormal" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonGradientLight" android:endColor="@color/colorButtonGradientDark" />
        </shape>
    </item>
</selector>